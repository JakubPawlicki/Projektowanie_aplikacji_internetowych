<div class="card">
    <div class="card-header bg-primary text-light">
        Szczegóły samochodu
    </div>
    <div class="card-body p-4">
        {{#each result}}
        <div class="form-group row mt-2 mb-2">
            <label for="registration_number" class="col-sm-2 col-form-label">Numer rejestracyjny</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="registration_number"
                       value="{{this.registration_number}}" disabled>
            </div>
        </div>
        <div class="form-group row mt-2 mb-2">
            <label for="name" class="col-sm-2 col-form-label">Nazwa</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="name" value="{{this.name}}" disabled>
            </div>
        </div>

        <div class="form-group row mt-2 mb-2">
            <label for="name" class="col-sm-2 col-form-label">Kategoria</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="registration_number"
                       value="{{this.category}}" disabled>
            </div>
        </div>


        <div class="form-group row mt-2 mb-2">
            <label for="number_of_passenger" class="col-sm-2 col-form-label">Liczba pasażerów</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="number_of_passengers" min="1" max="8"
                       value="{{this.number_of_passengers}}" disabled>
            </div>
        </div>

        <div class="form-group row mt-2 mb-2">
            <label for="price" class="col-sm-2 col-form-label">Cena</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" name="price" min="1" value="{{this.price}}" disabled>
            </div>
        </div>

        <div class="form-group row mt-2 mb-2">
            <label for="description" class="col-sm-2 col-form-label">Opis</label>
            <div class="col-sm-10">
            <textarea class="form-control" name="description" rows="5" id="comment"
                      disabled>{{this.description}}</textarea>
            </div>
        </div>
    {{/each}}
    </div>
</div>