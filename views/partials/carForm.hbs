<div class="form-group row mt-2 mb-2">
    <label for="registration_number" class="col-sm-2 col-form-label">Numer rejestracyjny</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" name="registration_number" placeholder="KR-12345"
               value="{{this.registration_number}}" pattern="[a-zA-Z]{2,3}-\d{5}$" required>
    </div>
</div>
<div class="form-group row mt-2 mb-2">
    <label for="name" class="col-sm-2 col-form-label">Nazwa</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" name="name" minlength="3" placeholder="BMW X" value="{{this.name}}" required>
    </div>
</div>

<div class="form-group row mt-2 mb-2">
    <label class="col-sm-2 col-form-label" for="category">Klasa</label>
    <div class="col-sm-10">
        <select class="form-select" id="category" name="category" value="{{this.category}}">
            <option id="n" value="Normal">Normal</option>
            <option id="p" value="Premium">Premium</option>
            <option id="l" value="Luxury">Luxury</option>
        </select>
    </div>
</div>

<div class="form-group row mt-2 mb-2">
    <label for="number_of_passenger" class="col-sm-2 col-form-label">Liczba pasażerów</label>
    <div class="col-sm-10">
        <input type="number" class="form-control" name="number_of_passengers" placeholder="5" min="1" max="8"
               value="{{this.number_of_passengers}}" required>
    </div>
</div>

<div class="form-group row mt-2 mb-2">
    <label for="price" class="col-sm-2 col-form-label">Cena</label>
    <div class="col-sm-10">
        <input type="number" class="form-control" name="price" placeholder="50" min="1" value="{{this.price}}" required>
    </div>
</div>

<div class="form-group row mt-2 mb-2">
    <label for="description" class="col-sm-2 col-form-label">Opis</label>
    <div class="col-sm-10">
        <textarea class="form-control" name="description" rows="2" id="comment">{{this.description}}</textarea>
    </div>
</div>